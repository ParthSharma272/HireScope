# backend/Dockerfile
FROM python:3.11-slim

ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1

WORKDIR /app

# system deps for pdf2image and weasyprint (may vary by OS)
RUN apt-get update && apt-get install -y \
    build-essential \
    poppler-utils \
    libpango-1.0-0 \
    libgdk-pixbuf2.0-0 \
    libcairo2 \
    libffi-dev \
    libxml2 \
    libxslt1.1 \
    wget \
    --no-install-recommends && rm -rf /var/lib/apt/lists/*

COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Download spaCy model
RUN python -m spacy download en_core_web_sm

COPY . .

# Support both local (8000) and Hugging Face (7860)
EXPOSE 8000
EXPOSE 7860

# Use PORT env variable if available (for Railway/Render), otherwise 8000
CMD uvicorn app:app --host 0.0.0.0 --port ${PORT:-8000} --workers 1
